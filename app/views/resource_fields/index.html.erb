<p id="notice"><%= notice %></p>

<h1>Resource Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_fields.each do |resource_field| %>
      <tr>
        <td><%= resource_field.name %></td>
        <td><%= resource_field.type %></td>
        <td><%= link_to 'Show', resource_field %></td>
        <td><%= link_to 'Edit', edit_resource_field_path(resource_field) %></td>
        <td><%= link_to 'Destroy', resource_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource Field', new_resource_field_path %>
