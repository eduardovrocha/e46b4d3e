<p id="notice"><%= notice %></p>

<h1>Resource Actions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class identification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_actions.each do |resource_action| %>
      <tr>
        <td><%= resource_action.name %></td>
        <td><%= resource_action.class_identification %></td>
        <td><%= link_to 'Show', resource_action %></td>
        <td><%= link_to 'Edit', edit_resource_action_path(resource_action) %></td>
        <td><%= link_to 'Destroy', resource_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

